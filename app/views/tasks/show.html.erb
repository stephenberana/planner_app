<div class="card">
<div class="card-header">
    <h4><%= @task.task_title %> </h4>
</div>

<div class="card-body">
<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">Due Date</th>
        <th scope="col">Category</th>
        <th scope="col">Description</th>
        <th scope="col" colspan="3" >Options</th>
    </tr>
    </thead>
    <tbody>
            <tr>
                <td><%= @task.due_date %></td>
                <td><%= @task.category.category_title %></td>
                <td><%= @task.description %></td>
                <td><%= link_to 'Add Notes', @task, 
                    {:remote => true, 'data-toggle' => '#modal', 'data-target' => '#modal-window', 
                    class: 'btn btn-outline-secondary btn-sm mb-2'} %>
                </td>
                <%# end modal %>
                <td><%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-outline-secondary btn-sm mb-2' %></td>
                <td><%= link_to 'Delete', @task, method: :delete, 
                    data: { confirm: 'Are you sure you want to delete this task?' }, 
                    class: 'btn btn-outline-danger btn-sm mb-2' %></td>
            </tr>
        </tbody>
    </table>
    <%= link_to 'Back', root_path %>
    <br> 
</div>
</div>