<%= form_with(model:task) do |form| %>
<div class="form-group">
    <%= form.label :task_title, style: 'padding: 1em' %>    
    <%= form.text_field :task_title, class: 'form-control', style: 'width:40%' %>
</div>

<div class="form-group">
    <%= form.label :description, style: 'padding: 1em' %>
    <%= form.text_field :description, class: 'form-control', style: 'width: 40%' %>
</div>

<div class="form-group">
    <%= form.label :due_date, style: 'padding: 1em' %>
    <%= form.date_field :due_date, class: 'form-control', style: 'width: 40%' %>
</div>

<div class="mb-3"> 
    <%= form.label :category_title, style: 'padding: 1em' %>
    <%= form.select :category_title, Category.all.collect { |c| [c.category_title, c.id] }, { prompt: "Select a category" }, { class: 'form-select' } %>
</div>

<%# showing errors %>
<% if @task.errors.any? %>
    <div class="invalid-feedback">
     <h2><%= pluralize(@task.errors.count, "error")%> prohibited this task from being saved:</h2>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
<% end %>

<div class="actions">
    <%= form.submit %>
</div>

<%end%>