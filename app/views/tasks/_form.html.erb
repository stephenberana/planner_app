<%= form_with(model:task) do |form| %>
<div class="form-group">
    <%= form.label :task_title, style: 'padding: 1em' %>    
    <%= form.text_field :task_title, class: 'form-control', style: 'width:40%' %>
</div>

<div class="form-group">
    <%= form.label :description, style: 'padding: 1em' %>
    <%= form.text_field :description, class: 'form-control', style: 'width: 40%' %>
</div>

<div class="form-group">
    <%= form.label :due_date, style: 'padding: 1em' %>
    <%= form.date_field :due_date, class: 'form-control', style: 'width: 40%' %>
</div>

<div class="form-group">
    <%= form.label :category_title, style: 'padding: 1em' %>
    <%= form.collection_select(:category_id, Category.all, :id, :category_title, 
        { prompt_text => 'Select a Category', :selected => @task.category_id },
        { class: 'form-control'}) %>
    
<%# showing errors %>
<% if @task.errors.any? %>
    <div id="error_explanation">
     <h2><%= pluralize(@task.errors.count, "error")%> prohibited this task from being saved:</h2>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
<% end %>

<div class="actions">
    <%= form.submit %>
</div>

<%end%>