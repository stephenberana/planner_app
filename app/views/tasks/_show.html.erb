<div class="modal-header">
    <button type='button' class='close' data-dismiss='modal'>x</button>
    <h3 class='modal-title' id='myModalLabel'>Description:</h3>
</div>

<div class='modal-body'>
    <%= @task.description%></td>
</div>

<div class='modal-footer'>
    <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary"%>
    <%= link_to 'Delete', @task, method: :delete, data: { confirm: 'Are you sure you want to delete this log?' }, class: "btn btn-primary"%>
    <%= link_to 'Back', root_path(@task), class: "btn btn-primary"%>
</div>