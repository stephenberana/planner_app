<div class="table-responsive">
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Task</th>
        <th scope="col">Due Date</th>
        <th scope="col">Completed?</th>
        <th scope="col" colspan="3" >Options</th>
    </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= task.task_title %></td>
                <td><%= task.due_date %></td>
                <td>
                    <%= form_for(:task) do |f|%>
                        <div class="forms">
                            <%= f.check_box :completed, checked_value = "1", unchecked_value = "0" %>
                        </div>
                        <% end %>
                </td>    
                <%# modal     %>
                <td><%= link_to 'Expand', task, 
                    {:remote => true, 'data-toggle' => '#modal', 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'} %>
                    <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content"></div>
                        </div>
                    </div>
                </td>
                <%# end modal %>
                <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary btn-lg' %></td>
                <td><%= link_to 'Delete', task, method: :delete, 
                    data: { confirm: 'Are you sure you want to delete this task?' }, 
                    class: 'btn btn-primary btn-lg' %></td>
            </tr>
            <%end%>
        </tbody>
    </table>

    <br> 
     
</div>