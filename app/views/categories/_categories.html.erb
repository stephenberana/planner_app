<div class="table-responsive">
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Category</th>
        <th scope="col">Description</th>
        <th scope="col" colspan="3" >Options</th>
    </tr>
    </thead>

    <tbody>
        <% @categories.each do |category| %>
            <tr>
                <td><%= category.category_title %></td>
                <td><%= category.category_description %></td>
                <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-secondary btn-sm mb-2' %></td>
                <td><%= link_to 'Delete', category, method: :delete, 
                    data: { confirm: 'Are you sure you want to delete this category?' }, 
                    class: 'btn btn-outline-danger btn-sm mb-2' %></td>
            </tr>
            <%end%>
        </tbody>
    </table>

    <br> 
     
</div>