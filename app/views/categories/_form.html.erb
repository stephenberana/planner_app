<%= form_with(model:category) do |form| %>
<div class="form-group">
    <% form.label :category_title, style: 'padding: 1em' %>    
    <%= form.text_field :category_title, class: 'form-control mb-4', style: 'width: 40%', placeholder: "Category Title" %>
</div>

<div class="form-group">
    <% form.label :category_description, style: 'padding: 1em' %>
    <%= form.text_field :category_description, class: 'form-control mb-4', style: 'width: 40%', placeholder: "Category Description" %>
</div>

<div class="actions">
    <%= form.submit "Submit", class: "btn btn-outline-secondary btn-sm mb-2" %>
</div>

<%end%>