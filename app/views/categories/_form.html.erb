<%= form_with(model:task) do |form| %>
<div class="form-group">
    <%= form.label :category_title, style: 'padding: 1em' %>    
    <%= form.text_field :category_title, class: 'form-control', style: 'width:40%' %>
</div>

<div class="form-group">
    <%= form.label :category_description, style: 'padding: 1em' %>
    <%= form.text_field :category_description, class: 'form-control', style: 'width: 40%' %>
</div>

<div class="actions">
    <%= form.submit %>
</div>

<%end%>